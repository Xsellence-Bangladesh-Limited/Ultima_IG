<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <template id="layout">

        <t t-set="langs" t-value="request.env['res.lang'].sudo().search([('active', '=', True)])"/>
        <t t-set="layout" t-value="request.env['ultima.layout'].sudo().search([], limit=1)"/>
        <t t-set="menus" t-value="request.env['ultima.website_menu'].sudo().search([])"/>

        <html lang="en">
            <head>
                <!-- Required meta tags -->
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
                <link rel="icon" href="/ultima/static/image/logo/favicon.png" type="image/x-icon"/>

                <!-- Bootstrap CSS -->
                <link rel="stylesheet" href="/ultima/static/css/bootstrap.min.css"/>
                <link rel="stylesheet" href="/ultima/static/css/short.css"/>

                <!-- Custom stylesheet -->
                <link rel="stylesheet" href="/ultima/static/css/index.css?v=index1"/>

                <t t-raw="header"></t>
            </head>

            <body>

                <div id="wrap">

                    <!-- Top header > 992 px -->
                    <div class="top_header sora-400">

                        <!-- Left company logo -->
                        <div>
                            <a href="/">
                                <img class="logo" t-att-src="image_data_uri(layout.logo_256)" alt="Ultima Logo"/>
                            </a>
                        </div>

                        <!-- Right quick contact -->
                        <div>
                            <div class="options">
                                <div class="br">

                                    <t t-foreach="langs" t-as="lang">

                                        <t t-if="lang.code == 'en_US'">
                                            <img style="display: inline-block;" t-att-id="'flag_image_%s' % lang.code"
                                                 class="flag_image"
                                                 t-att-src="lang.flag_image_url" alt=""/>
                                        </t>
                                        <t t-else="">
                                            <img t-att-id="'flag_image_%s' % lang.code" class="flag_image"
                                                 t-att-src="lang.flag_image_url" alt=""/>
                                        </t>
                                    </t>

                                    <select class="lang select_lang" name="lang" id="lang">
                                        <t t-foreach="langs" t-as="lang">
                                            <option t-att-value="lang.code"
                                                    t-att-selected="lang.code == 'en_US'"
                                                    t-att-xx="lang.flag_image_url"
                                                    t-esc="lang.name"></option>
                                        </t>
                                    </select>
                                </div>
                                <div class="br">
                                    <a href="#">
                                        <div class="d-f ai-c">
                                            <svg width="15" height="15" viewBox="0 0 20 20" fill="none"
                                                 xmlns="http://www.w3.org/2000/svg">
                                                <path
                                                        d="M17.5 9.07391C17.5 13.1649 12.8125 18.3332 10 18.3332C7.1875 18.3332 2.5 13.1649 2.5 9.07391C2.5 4.98291 5.85786 1.6665 10 1.6665C14.1421 1.6665 17.5 4.98291 17.5 9.07391Z"
                                                        stroke="#00060B" stroke-width="1.3"/>
                                                <path
                                                        d="M12.5 9.1665C12.5 10.5472 11.3807 11.6665 10 11.6665C8.61929 11.6665 7.5 10.5472 7.5 9.1665C7.5 7.78579 8.61929 6.6665 10 6.6665C11.3807 6.6665 12.5 7.78579 12.5 9.1665Z"
                                                        stroke="#00060B" stroke-width="1.3"/>
                                            </svg>
                                            <div class="pl-1">Store Location</div>
                                        </div>
                                    </a>
                                </div>
                                <div class="d-f ai-c">
                                    <svg width="17" height="17" viewBox="0 0 25 24" fill="none"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path d="M16.4695 6C16.4695 3.79086 14.6786 2 12.4695 2C10.2603 2 8.46948 3.79086 8.46948 6"
                                              stroke="#00060B" stroke-width="1.2" stroke-linecap="round"
                                              stroke-linejoin="round"/>
                                        <path
                                                d="M5.03148 9.50386C5.28169 7.50215 6.9833 6 9.00059 6H15.9383C17.9556 6 19.6572 7.50215 19.9074 9.50386L20.9074 17.5039C21.2059 19.8913 19.3443 22 16.9383 22H8.00059C5.5946 22 3.73305 19.8913 4.03148 17.5039L5.03148 9.50386Z"
                                                stroke="#00060B" stroke-width="1.2" stroke-linejoin="round"/>
                                        <path d="M9.35254 16C11.8009 17.3404 13.1428 17.3263 15.5873 16"
                                              stroke="#00060B" stroke-width="1.2"
                                              stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </div>
                                <div class="d-f ai-c">
                                    <a href="/my">
                                        <svg width="15" height="15" viewBox="0 0 16 20" fill="none"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path
                                                    d="M11.339 5C11.339 6.87777 9.81673 8.4 7.93897 8.4V9.6C10.4795 9.6 12.539 7.54051 12.539 5H11.339ZM7.93897 8.4C6.0612 8.4 4.53897 6.87777 4.53897 5H3.33897C3.33897 7.54051 5.39846 9.6 7.93897 9.6V8.4ZM4.53897 5C4.53897 3.12223 6.0612 1.6 7.93897 1.6V0.4C5.39846 0.4 3.33897 2.45949 3.33897 5H4.53897ZM7.93897 1.6C9.81673 1.6 11.339 3.12223 11.339 5H12.539C12.539 2.45949 10.4795 0.4 7.93897 0.4V1.6ZM14.339 15.5C14.339 16.1168 13.8234 16.8367 12.6204 17.4382C11.4533 18.0218 9.79901 18.4 7.93897 18.4V19.6C9.94491 19.6 11.7906 19.1947 13.157 18.5115C14.4876 17.8463 15.539 16.8162 15.539 15.5H14.339ZM7.93897 18.4C6.07892 18.4 4.42463 18.0218 3.25755 17.4382C2.05458 16.8367 1.53896 16.1168 1.53896 15.5H0.338965C0.338965 16.8162 1.39036 17.8463 2.72089 18.5115C4.08731 19.1947 5.93302 19.6 7.93897 19.6V18.4ZM1.53896 15.5C1.53896 14.8832 2.05458 14.1633 3.25755 13.5618C4.42463 12.9782 6.07892 12.6 7.93897 12.6V11.4C5.93302 11.4 4.08731 11.8053 2.72089 12.4885C1.39036 13.1537 0.338965 14.1838 0.338965 15.5H1.53896ZM7.93897 12.6C9.79901 12.6 11.4533 12.9782 12.6204 13.5618C13.8234 14.1633 14.339 14.8832 14.339 15.5H15.539C15.539 14.1838 14.4876 13.1537 13.157 12.4885C11.7906 11.8053 9.94491 11.4 7.93897 11.4V12.6Z"
                                                    fill="#00060B"/>
                                        </svg>
                                    </a>
                                </div>
                                <div>
                                    <a t-att-href="'tel:%s' % layout.contact_no">
                                        <div class="contact_button d-f ai-c">
                                            <svg width="16" height="16" viewBox="0 0 16 16" fill="none"
                                                 xmlns="http://www.w3.org/2000/svg">
                                                <path
                                                        d="M15.439 13.8333V12.4617C15.439 11.7802 15.024 11.1674 14.3913 10.9143L12.6962 10.2362C11.8914 9.91429 10.9741 10.263 10.5865 11.0383L10.439 11.3333C10.439 11.3333 8.35563 10.9167 6.68896 9.25C5.0223 7.58333 4.60563 5.5 4.60563 5.5L4.90065 5.35249C5.67595 4.96484 6.02468 4.04761 5.70275 3.2428L5.0247 1.54768C4.7716 0.914919 4.15875 0.5 3.47724 0.5H2.10563C1.18516 0.5 0.438965 1.24619 0.438965 2.16667C0.438965 9.53046 6.4085 15.5 13.7723 15.5C14.6928 15.5 15.439 14.7538 15.439 13.8333Z"
                                                        fill="#F9FDFF"/>
                                            </svg>
                                            <div class="ml-2" t-esc="layout.contact_no"></div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Top header small < 992 -->
                    <div class="small_header">
                        <div>
                            <a href="/">
                                <img class="logo" t-att-src="image_data_uri(layout.logo_256)" alt="Ultima Logo"/>
                            </a>
                        </div>
                        <div>
                            <i id="menu_control_icon_bars" class="fas fa-bars menu_control_icon"></i>
                            <i id="menu_control_icon_times" class="fas fa-times menu_control_icon"
                               style="display: none;"></i>
                        </div>
                    </div>
                    <!-- End Top header small device < 992 -->

                    <!-- Small menu -->
                    <div class="sm_menu">

                        <!-- A vertical navbar -->
                        <nav class="navbar bg-light">
                            <!-- Links -->
                            <ul class="navbar-nav">
                                
                                <t t-foreach="menus.filtered(lambda m: not m.parent_id)" t-as="menu">

                                    <!-- Dropdown menu -->
                                    <t t-if="menus.filtered(lambda m: m.parent_id.id == menu.id)">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle"
                                               href="#"
                                               id="navbarDropdown"
                                               role="button"
                                               data-toggle="dropdown"
                                               aria-haspopup="true" aria-expanded="false" t-esc="menu.name"></a>

                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <div class="list-group list-group-flush">

                                                    <t t-foreach="menus.filtered(lambda m: m.parent_id.id == menu.id)"
                                                       t-as="submenu">
                                                        <a t-att-href="submenu.url"
                                                           class="list-group-item list-group-item-action"
                                                           t-esc="submenu.name"></a>
                                                    </t>

                                                </div>
                                            </div>

                                        </li>
                                    </t>
                                    <!-- End Dropdown menu -->

                                    <!-- Root menu -->
                                    <t t-else="">
                                        <li class="nav-item">
                                            <a class="nav-link" t-att-href="menu.url" t-esc="menu.name"></a>
                                        </li>
                                    </t>
                                    <!-- End Root menu -->

                                </t>
                                <!-- End root foreach -->

                            </ul>
                        </nav>

                    </div>
                    <!-- End Small menu -->

                    <!-- Menu -->
                    <div class="menu_container sora-400">

                        <ul class="menu">

                            <t t-foreach="menus.filtered(lambda m: not m.parent_id)" t-as="menu">

                                <!-- Dropdown menu -->
                                <t t-if="menus.filtered(lambda m: m.parent_id.id == menu.id)">
                                    <li>
                                        <a class="d-f ai-c" href="#">
                                            <t t-esc="menu.name"/>
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                 xmlns="http://www.w3.org/2000/svg">
                                                <path d="M17 10L12 14L7 10" stroke="#7B7B7B" stroke-width="1.4"
                                                      stroke-linecap="round"
                                                      stroke-linejoin="round"/>
                                            </svg>
                                        </a>
                                        <div class="dropdown_menu">
                                            <t t-foreach="menus.filtered(lambda m: m.parent_id.id == menu.id)"
                                               t-as="submenu">
                                                <a class="dropdown_menu_item" t-att-href="submenu.url"
                                                   t-esc="submenu.name"></a>
                                            </t>
                                        </div>
                                    </li>
                                </t>

                                <!-- Root menu -->
                                <t t-else="">
                                    <li>
                                        <a t-attf-href="#{menu.url}"
                                           t-att-target="menu.new_window and '_blank' or ''"
                                           t-esc="menu.name">
                                        </a>
                                    </li>
                                </t>
                            </t>

                        </ul>

                    </div>

                    <!-- page content -->
                    <t t-raw="0"></t>
                    <!-- End page content -->

                    <!-- Footer -->
                    <div class="footer">
                        <div class="container">

                            <div class="content">
                                <div class="row">
                                    <div class="col-12 col-lg-4 mt-5">
                                        <img class="footer_logo" t-att-src="image_data_uri(layout.footer_logo_256)"
                                             alt="Footer Logo"/>
                                        <div class="mt-3 text poppins-400" t-esc="layout.footer_desc">
                                        </div>
                                        <div>
                                            <div class="d-f socials">
                                                <t t-foreach="layout.social_ids" t-as="so">
                                                    <a class="d-f ai-c" t-att-href="so.url">
                                                        <t t-raw="so.svg"/>
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-2 mt-5">
                                        <h5 class="sora-600">Quick Link</h5>
                                        <ul class="quick_links text">
                                            <t t-foreach="layout.quick_link_ids" t-as="ln">
                                                <li>
                                                    <a t-att-href="ln.url" t-esc="ln.name"></a>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                    <div class="col-12 col-lg-3 mt-5">
                                        <h5 class="sora-600">Find Us</h5>
                                        <ul class="quick_links text">
                                            <li t-esc="layout.address"></li>
                                            <li>
                                                Contact No:
                                                <b class="text-white" t-esc="layout.contact_no"></b>
                                            </li>
                                            <li>
                                                Email:
                                                <b class="text-white" t-esc="layout.email"></b>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-12 col-lg-3 mt-5">
                                        <h5 class="sora-600">Map</h5>
                                        <a t-att-href="layout.map_url">
                                            <img class="map" t-att-src="image_data_uri(layout.map_256)" alt=""/>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-4 text-center">
                                &amp;copy;Copyright 2024, All right reserved by Ultima
                            </div>

                        </div>
                    </div>

                    <!-- Optional JavaScript -->
                    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
                    <script src="/ultima/static/js/jquery-3.6.0.min.js"/>
                    <script src="/ultima/static/js/popper.min.js"/>
                    <script src="/ultima/static/js/bootstrap.min.js"/>
                    <script src="/ultima/static/js/font-awesome.js"/>

                    <!-- Custom Javascript -->
                    <script src="/ultima/static/js/index.js"/>

                    <t t-raw="footer"></t>

                    <!-- Absolute Components -->
                    <div id="lb_ac">
                        <div class="d-f fd-c">
                            <div class="icon">
                                <a t-att-href="'tel:%s' % layout.contact_no">
                                    <img src="/ultima/static/image/logo/callicon.png" alt="Contact Number"/>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Bottom right buttons -->
                    <div id="rb_ac">
                        <div class="d-f fd-c">
                            <div class="icon">
                                <a target="_blank" href="https://m.me/ultimabd">
                                    <img src="/ultima/static/image/logo/fbicon.png" alt="Facebook messenger"/>
                                </a>
                            </div>
                            <div class="icon mt-2">
                                <a target="_blank"
                                   t-att-href="'https://api.whatsapp.com/send?phone=+%s&amp;text=Hello!&amp;source=&amp;data=' % layout.whatsapp">
                                    <img src="/ultima/static/image/logo/whaticon.webp" alt="WhatsApp contact Number"/>
                                </a>
                            </div>
                        </div>
                    </div>

                </div> <!-- End wrap -->

            </body>

        </html>


    </template>
</odoo>