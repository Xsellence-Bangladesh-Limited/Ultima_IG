        <field name="model">ultima.amc.service.plan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" readonly="True"/>
                <field name="title"/>
                <field name="plan_feature_ids" widget="many2many_tags"/>
                <field name="discount_type"/>
                <field name="discount_percentage"
                       invisible="discount_type == 'not_available' or discount_type == 'free'"/>
            </tree>
        </field>
    </record>
